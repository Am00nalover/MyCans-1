<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".UserActivty">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="460dp"
        android:layout_height="102dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Profile"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/ProfileNameView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ProfileNameView"
        android:layout_width="329dp"
        android:layout_height="48dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="18dp"
        android:background="#00F7F3D5"
        android:text="user name "
        android:textColor="#000000"
        android:textColorHighlight="#F44336"
        android:textColorHint="#787579"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/ProfilePhoneView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />


    <TextView
        android:id="@+id/ProfilePhoneView"
        android:layout_width="329dp"
        android:layout_height="48dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="30dp"
        android:background="#00FFFFFF"
        android:text="Phone"
        android:textColor="#000000"
        android:textColorHighlight="#E91E63"
        android:textColorHint="#9B9396"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/ProfileEmailView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ProfileNameView" />

    <TextView
        android:id="@+id/ProfileEmailView"
        android:layout_width="329dp"
        android:layout_height="48dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="154dp"
        android:background="#00FFFFFF"
        android:text="E-mail address"
        android:textColor="#000000"
        android:textColorHighlight="#E91E63"
        android:textColorHint="#8A8686"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnLogOut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ProfilePhoneView" />

    <Button
        android:id="@+id/btnLogOut"
        android:layout_width="412dp"
        android:layout_height="65dp"
        android:layout_alignParentBottom="false"
        android:layout_margin="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="705dp"
        android:layout_marginEnd="200dp"
        android:layout_marginBottom="400dp"
        android:text="Logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>